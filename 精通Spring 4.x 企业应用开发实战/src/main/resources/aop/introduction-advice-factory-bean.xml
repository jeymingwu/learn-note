<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="controllablePerformanceMonitor" class="com.example.aop.springaop.introduction.ControllablePerformance"/>

    <bean id="target" class="com.example.aop.ForumServiceImpl"/>

    <bean id="forumService" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:interfaces="com.example.aop.springaop.introduction.Monitored"
          p:target-ref="target"
          p:interceptorNames="controllablePerformanceMonitor"
          p:proxyTargetClass="true"/>
</beans>